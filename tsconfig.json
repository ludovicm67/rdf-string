{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2019",
    "lib": [
      "es6",
      "esnext"
    ],
    "strictNullChecks": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
